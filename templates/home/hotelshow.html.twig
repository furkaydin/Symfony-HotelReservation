{% extends 'homebase.html.twig' %}

{% block title %}{{ hotel.title }}{% endblock %}
{% block keywords %}{{ hotel.keywords }}{% endblock %}
{% block description %}{{ hotel.description }}{% endblock %}

{% block body %}
<div class="page-wrapper" style="min-height: 250px;">
    <h1>Hotel</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ hotel.title }}</td>
            </tr>
            <tr>
                <th>Keywords</th>
                <td>{{ hotel.keywords }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ hotel.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ hotel.image }}</td>
            </tr>
            <tr>
                <th>Star</th>
                <td>{{ hotel.star }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ hotel.address }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ hotel.phone }}</td>
            </tr>
            <tr>
                <th>Fax</th>
                <td>{{ hotel.fax }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ hotel.email }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ hotel.city }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ hotel.country }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ hotel.location }}</td>
            </tr>
            <tr>
                <th>Detail</th>
                <td>{{ hotel.detail | raw }}</td>
            </tr>

        </tbody>
    </table>

{% endblock %}
